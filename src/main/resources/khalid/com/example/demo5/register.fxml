<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="480.0" prefWidth="280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="khalid.com.example.demo5.RegisterController">
   <children>
      <AnchorPane layoutX="-2.0" prefHeight="63.0" prefWidth="288.0" style="-fx-background-color: #021334;">
         <children>
            <Label layoutX="94.0" layoutY="23.0" text="Create an account!" textFill="#d0ae43" />
            <ImageView fx:id="logoImageView" fitHeight="50.0" fitWidth="53.0" layoutX="14.0" layoutY="7.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@images/logo.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>
      <Label layoutX="77.0" layoutY="75.0" text="Please enter your details" />
      <TextField fx:id="FIrstnamefield" layoutX="14.0" layoutY="149.0" promptText="Firstname" />
      <TextField fx:id="Lastnamefield" layoutX="13.0" layoutY="185.0" promptText="Lastname" />
      <TextField fx:id="Usernamefield" layoutX="14.0" layoutY="227.0" promptText="Username" />

      <!-- Masked Password Field -->
      <PasswordField fx:id="setPasswordField" layoutX="13.0" layoutY="279.0" promptText="Password" />

      <!-- Masked Confirm Password Field -->
      <PasswordField fx:id="confirmPasswordField" layoutX="14.0" layoutY="312.0" promptText="Confirm password" />

      <!-- Unmasked Password Field (Initially Hidden) -->
      <TextField fx:id="unmaskedPasswordField" layoutX="13.0" layoutY="240.0" promptText="Password" visible="false" />

      <!-- Unmasked Confirm Password Field (Initially Hidden) -->
      <TextField fx:id="unmaskedConfirmPasswordField" layoutX="14.0" layoutY="286.0" promptText="Confirm password" visible="false" />

      <Button fx:id="registerButtonAction" layoutX="60.0" layoutY="400.0" mnemonicParsing="false" onAction="#registerButtonAction" prefHeight="26.0" prefWidth="165.0" style="-fx-background-color: #021334;" text="register" textFill="#d0ae43" />
      <Button fx:id="closeButton" layoutX="93.0" layoutY="439.0" mnemonicParsing="false" onAction="#closeButtonOnAction" prefHeight="26.0" prefWidth="99.0" style="-fx-background-color: #021334;" text="close" textFill="#d0ae43" />
      <Label fx:id="registrationMessageLabel" layoutX="77.0" layoutY="374.0" prefHeight="18.0" prefWidth="130.0" textFill="SEAGREEN" />
      <Label fx:id="confirmPasswordLabel" layoutX="13.0" layoutY="258.0" prefHeight="16.0" prefWidth="226.0" textFill="#ff0026">
         <font>
            <Font size="11.0" />
         </font>
      </Label>
      <!-- Show Password Checkbox -->
      <CheckBox fx:id="showPasswordCheckBox" layoutX="18.0" layoutY="344.0" mnemonicParsing="false" onAction="#toggleShowPassword" text="Toon wachtwoord" />
      <Label fx:id="userNameTaken" layoutX="13.0" layoutY="211.0" prefHeight="16.0" prefWidth="226.0" textFill="#ff0026">
         <font>
            <Font size="11.0" />
         </font>
      </Label>
      <TextField fx:id="emailadressField" layoutX="14.0" layoutY="116.0" promptText="Emailadress" />
      <Label fx:id="emailadressTaken" layoutX="13.0" layoutY="100.0" prefHeight="16.0" prefWidth="226.0" textFill="#ff0026">
         <font>
            <Font size="11.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
